@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    Layout = null;
    var isLoggedIn = Context.User.Identity.IsAuthenticated;
    var userName = Context.User.Identity.Name;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My Website</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/pages/navbar.css" />
    



    @RenderSection("Styles", required: false) <!--tells the layout to render any custom styles defined by the view. -->
    <meta name="csrf-token" content="@Antiforgery.GetAndStoreTokens(Context).RequestToken" />
</head>
<body>

    <!-- Modern Navbar Start -->
    <header class="modern-navbar">
        <div class="container">
            <!-- Left: Logo -->
            <div class="navbar-left">
                <a asp-controller="Home" asp-action="Index" class="logo">
                    <img src="~/img/Cartify Logo.png" alt="Logo" />
                </a>
            </div>

            <!-- Center: Search + Wishlist + Cart -->
            <div class="navbar-center">
                <form id="searchForm" method="get" action="/Search" class="search-form">
                    
                    <input type="text" id="searchInput" name="query" placeholder="Search here..." />
                    <button type="submit">Search</button>
                </form>


                <div class="nav-icons">
                    <a asp-controller="Wishlist" asp-action="Index" class="wishlist-link">
                        <i class="fa fa-heart-o"></i> <span>Wishlist</span>
                    </a>
                </div>
                <!--Cart-->
                <a asp-controller="Cart" asp-action="Index" class="cart-icon">
                    <i class="bi bi-cart3"></i> <span>Cart</span>
                </a>
            </div>
        </div>
        <!-- Right: Login / Register -->
        <div class="navbar-right auth-container">
            <div id="auth-links">
                @if (isLoggedIn)
                {
                    <form asp-controller="Account" asp-action="Profile" method="get" class="d-inline">
                        <button type="submit" class="btn btn-link text-decoration-none ">
                            <i class="bi bi-person"></i> Profile
                        </button>
                    </form>

                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger text-white">
                            <i class="fa fa-sign-out"></i> Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login">
                        <i class="fa fa-sign-in"></i> Login
                    </a>
                    <a asp-controller="Account" asp-action="Register">
                        <i class="fa fa-user-plus"></i> Register
                    </a>
                }
            </div>
        </div>

        <!-- Mobile Menu Toggle -->
        <div class="menu-toggle">
            <a href="#" onclick="document.querySelector('.main-nav').classList.toggle('active')">
                <i class="fa fa-bars"></i>
            </a>
        </div>
    </header>
    <!-- Modern Navbar End -->
    <!-- Navigation Menu -->
    <nav class="container">
        <ul class="main-nav nav navbar-nav">
            <li class="@(ViewBag.Active == "Home" ? "active" : "")"><a href="~/">Home</a></li>
            <li><a href="/Store">Store</a></li>
              
            @if (isLoggedIn) 
            {
                <li><a asp-controller="Orders" asp-action="Index">My Orders</a></li>
            }
            
            <li><a asp-controller="Home" asp-action="Contact">Contact Us</a></li>

        </ul>
    </nav>

    <!-- Render body content -->
    <main class="container">
        @RenderBody()
    </main>


    <!-- FOOTER -->
    <footer id="footer">
        <!-- top footer -->
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">About Us</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut.</p>
                            <ul class="footer-links">
                                <li><a href="#"><i class="fa fa-map-marker"></i>Cairo-Egypt</a></li>
                                <li><a href="#"><i class="fa fa-phone"></i>+201270532076</a></li>
                                <li><a href="#"><i class="fa fa-envelope-o"></i>cartify@email.com</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Shoping</h3>
                            <ul class="footer-links">
                                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a asp-controller="Store" asp-action="Index">Store</a></li>
                                
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Information</h3>
                            <ul class="footer-links">
                                <li><a asp-controller="Home" asp-action="Contact" >Contact Us</a></li>
                                <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                                <li><a asp-controller="Home" asp-action="Policy">Terms & Conditions</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Service</h3>
                            <ul class="footer-links">
                                <li><a asp-controller="Account" asp-action="Profile">My Account</a></li>
                                <li><a asp-controller="Cart" asp-action="Index">View Cart</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /top footer -->
        <!-- bottom footer -->
        <div id="bottom-footer" class="section">
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12 text-center">
                        
                        <span class="copyright">
                            Copyright &copy; 2025 All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by Hassan Abo Ali
                        </span>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /bottom footer -->
    </footer>
    <!-- /FOOTER -->


    <!-- Scripts -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/pages/search.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/nouislider.min.js"></script>
    <script src="~/js/pages/navbar.js"></script>
    <script src="~/js/jquery.zoom.min.js"></script>
    <script src="~/js/pages/product.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
