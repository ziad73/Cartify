@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Cartify</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/pages/auth.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="auth-content">
            @if (ViewData["HideLogo"] as bool? != true)
            {
                <div class="text-center mb-4">
                    <img src="~/img/Cartify Logo.png" alt="Logo" class="auth-logo" />
                    @if (ViewData["AuthTitle"] != null)
                    {
                        <h2 class="auth-title">@ViewData["AuthTitle"]</h2>
                    }
                    @if (ViewData["AuthSubtitle"] != null)
                    {
                        <p class="auth-subtitle">@ViewData["AuthSubtitle"]</p>
                    }
                </div>
            }
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/pages/auth.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>