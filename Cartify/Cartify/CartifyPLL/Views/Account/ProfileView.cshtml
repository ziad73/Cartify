@using CartifyBLL.ViewModels.Account
@model ProfileVM
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="/css/pages/profile.css" rel="stylesheet" />
}

@Html.AntiForgeryToken()

<!-- BREADCRUMB -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">My Profile</li>
    </ol>
</nav>
<!-- /BREADCRUMB -->
<!-- PROFILE SECTION -->
<div class="container profile-container">
    <div class="row">
        <div class="col-12">
            <h2 class="profile-header">My Profile</h2>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <!-- PROFILE SIDEBAR -->
        <div class="col-md-4">
            <div class="card profile-card">
                <div class="card-body text-center">
                    <div class="profile-avatar-container">
                        <img src="@(Model.AvatarUrl ?? "/img/default-avatar.png")"
                             class="profile-avatar img-thumbnail rounded-circle"
                             id="profileAvatar">
                    </div>

                    <h4 class="profile-name">@Model.FullName</h4>
                    <p class="profile-member-since">
                        <i class="fa fa-calendar"></i> Member since @Model.MemberSince.ToString("MMMM yyyy")
                    </p>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <a href="@Url.Action("Profile", "Account")" class="active">
                            <i class="fa fa-user"></i> Profile Overview
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a  asp-controller="Orders" asp-action="Index">
                            <i class="fa fa-shopping-bag" ></i>My Orders
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("Profile", "Account")#address" id="addressLink">
                            <i class="fa fa-map-marker"></i> My Addresses
                        </a>
                    </li>
                    
                </ul>
            </div>
        </div>

        <!-- PROFILE CONTENT -->
        <div class="col-md-8">
            <!-- ADDRESS TAB CONTENT (SHOWS ONLY WHEN ADDRESS TAB IS ACTIVE) -->
            <div class="card mb-3" id="addressTabContent" style="display: none;">
                <div class="card-header">
                    <h5 class="card-title mb-0">My Addresses</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">Manage your shipping addresses</h6>
                        <a href="@Url.Action("AddAddress", "Account")" class="btn btn-primary btn-sm">
                            <i class="fa fa-plus"></i> Add New Address
                        </a>
                    </div>

                    @if (Model.Addresses != null && Model.Addresses.Any())
                    {
                        <div class="row">
                            @foreach (var address in Model.Addresses)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="address-card @(address.IsDefault ? "default-address" : "")">
                                        @if (address.IsDefault)
                                        {
                                            <span class="default-badge">Default</span>
                                        }
                                        <div class="address-details">
                                            <h6>@address.Name</h6>
                                            <p>@address.StreetAddress</p>
                                            <p>@address.City, @address.State @address.PostalCode</p>
                                            <p>@address.Country</p>
                                            <p class="phone-number">Phone: @address.PhoneNumber</p>
                                        </div>
                                        <div class="address-actions mt-2">
                                            <a href="@Url.Action("EditAddress", "Account", new { id = address.Id })"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fa fa-edit"></i> Edit
                                            </a>
                                            @if (!address.IsDefault)
                                            {
                                                <button onclick="setDefaultAddress(@address.Id)"
                                                        class="btn btn-sm btn-outline-success ml-1">
                                                    <i class="fa fa-check-circle"></i> Set Default
                                                </button>
                                            }
                                            <button data-address-id="@address.Id"
                                                    class="btn btn-sm btn-outline-danger ml-1 delete-address-btn"
                                                    data-toggle="modal" data-target="#deleteAddressModal-@address.Id">
                                                <i class="fa fa-trash"></i> Delete
                                            </button>
                                        </div>

                                        <!-- Modal for each address -->
                                        <div class="modal fade" id="deleteAddressModal-@address.Id" tabindex="-1" role="dialog">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this address?</p>
                                                        <p><strong>@address.StreetAddress, @address.City</strong></p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                        <form asp-action="DeleteAddress" method="post" asp-controller="Account">
                                                            <input type="hidden" name="id" value="@address.Id" />
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            You haven't added any addresses yet.
                        </div>
                    }
                </div>
            </div>

            <!-- OVERVIEW TAB CONTENT (DEFAULT) -->
            <div class="card" id="overviewTabContent">
                <div class="card-header">
                    <h5 class="card-title mb-0">Profile Overview</h5>
                </div>
                <div class="card-body">
                    <div class="profile-info-section">
                        <div class="info-item">
                            <label>Full Name</label>
                            <p>@Model.FullName</p>
                        </div>
                        <div class="info-item">
                            <label>Email Address</label>
                            <p>
                                @Model.Email
                                @if (Model.EmailVerified)
                                {
                                    <span class="badge badge-success verified-badge">
                                        <i class="fa fa-check"></i> Verified
                                    </span>
                                }
                                else
                                {
                                    <a href="@Url.Action("VerifyEmail", "Account")" class="badge badge-warning verify-badge">
                                        Verify Now
                                    </a>
                                }
                            </p>
                        </div>
                        @if (Model.PhoneNumber != null)
                        {
                            <div class="info-item">
                                <label>Phone Number</label>
                                <p>
                                    @Model.PhoneNumber
                                    @if (Model.PhoneVerified)
                                    {
                                        <span class="badge badge-success verified-badge">
                                            <i class="fa fa-check"></i> Verified
                                        </span>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("VerifyPhone", "Account")" class="badge badge-warning verify-badge">
                                            Verify Now
                                        </a>
                                    }
                                </p>
                            </div>
                        }
                        <div class="profile-actions mt-4">
                            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary">
                                <i class="fa fa-edit"></i> Edit Profile
                            </a>
                            <a href="@Url.Action("VerifyEmail", "Account")" class="btn btn-outline-secondary">
                                <i class="fa fa-lock"></i> Change Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/profile.js"></script>

    <script>
        function setDefaultAddress(addressId) {
            fetch('@Url.Action("SetDefaultAddress", "Account")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ id: addressId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Failed to set default address.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while setting the default address.');
            });
        }

         $(document).ready(function() {
            // Check URL hash on page load
            if (window.location.hash === '#address') {
                showAddressTab();
                // Add active class to address link
                $('#addressLink').addClass('active');
                $('#overviewLink').removeClass('active');
            } else {
                showOverviewTab();
                // Add active class to overview link
                $('#overviewLink').addClass('active');
                $('#addressLink').removeClass('active');
            }

            // Handle sidebar navigation
            $('#addressLink').on('click', function(e) {
                e.preventDefault();
                showAddressTab();
                window.location.hash = 'address';
                // Update active states
                $(this).addClass('active');
                $('#overviewLink').removeClass('active');
            });

            $('#overviewLink').on('click', function(e) {
                e.preventDefault();
                showOverviewTab();
                window.location.hash = '';
                // Update active states
                $(this).addClass('active');
                $('#addressLink').removeClass('active');
            });
        });

        function showAddressTab() {
            $('#overviewTabContent').hide();
            $('#addressTabContent').show();
            // Scroll to the top of the addresses section
            $('html, body').animate({
                scrollTop: $('#addressTabContent').offset().top - 20
            }, 200);
        }

        function showOverviewTab() {
            $('#addressTabContent').hide();
            $('#overviewTabContent').show();
        }

    </script>
}