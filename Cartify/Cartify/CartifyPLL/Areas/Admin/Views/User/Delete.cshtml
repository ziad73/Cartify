@using CartifyBLL.ViewModels.User
@model UserVM
@{
    ViewData["Title"] = "Delete User";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h4><i class="fa fa-exclamation-triangle"></i> Confirm Delete</h4>
        </div>
        <div class="card-body text-center">
            <img src="@(!string.IsNullOrEmpty(Model.AvatarUrl) ? Model.AvatarUrl : "/img/default-avatar.png")"
                 class="rounded-circle mb-3"
                 style="width: 120px; height: 120px; object-fit: cover;" />

            <h5 class="text-danger">Are you sure you want to delete this user?</h5>
            <p class="mb-4">
                <strong>@Model.FullName</strong><br />
                <small>@Model.Email</small>
            </p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fa fa-trash"></i> Yes, Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fa fa-times"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
