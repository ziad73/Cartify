@model List<CartifyDAL.Entities.category.Category>

@{
    ViewBag.Title = "Manage Categories";
    ViewData["PageTitle"] = "Manage Category";//for each admin page
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/pages/ManageCategory.css" />
}
<!-- MAIN CONTENT -->
<div class="section">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col-md-6">
                    <h2>Category Management</h2>
                    <p class="text-muted">Manage product categories and their settings</p>
                </div>
                <div class="col-md-6 text-right">
                    <a href="/Admin/Category/Create" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Add New Category
                    </a>
                    <span class="badge badge-primary ml-2">Total Categories: @Model.Count()</span>
                </div>
            </div>
        </div>

        <!-- Categories Grid -->
        <div class="categories-grid">
            @foreach (var item in Model)
            {
                <div class="category-card">
                    <div class="category-header">
                        <div class="category-name">@item.Name</div>
                        <span class="badge badge-success">Active</span>
                    </div>
                    <div class="category-stats">
                        <div class="stat-item">
                            <div class="stat-number">0</div>
                            <div class="stat-label">Products</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">0</div>
                            <div class="stat-label">Orders</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">$0</div>
                            <div class="stat-label">Revenue</div>
                        </div>
                    </div>
                    <div class="action-buttons">
                        <a href="/Admin/Category/Edit/@item.CategoryId" class="btn btn-sm btn-warning">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <a href="/Admin/Category/Delete/@item.CategoryId" class="btn btn-sm btn-danger">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>