@model CartifyDAL.Entities.category.Category

@{
    ViewBag.Title = "Edit Category";
    ViewData["PageTitle"] = "Edit Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Category</h2>

<form method="post" action="/Admin/Category/Edit">
    <input type="hidden" name="id" value="@Model.CategoryId" />
    <div class="form-group">
        <label>Name</label>
        <input name="name" value="@Model.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea name="description" class="form-control">@Model.Description</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

