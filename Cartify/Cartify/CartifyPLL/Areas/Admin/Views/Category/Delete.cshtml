@model CartifyDAL.Entities.category.Category

@{
    ViewBag.Title = "Delete Category";
    ViewData["PageTitle"] = "Delete Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Category</h2>

<p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>

<form method="post" action="/Admin/Category/Delete">
    <input type="hidden" name="id" value="@Model.CategoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Admin/Category" class="btn btn-secondary">Cancel</a>
</form>
